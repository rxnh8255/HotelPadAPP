<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qrbg"
    android:orientation="vertical" android:gravity="center"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="40dp"
            android:textColor="#ee8101"
            android:gravity="center"
            android:text="欢迎入住色龙智慧酒店" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtroom_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="30dp"
                android:textColor="#dfa916"
                android:text="房间号" />

            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtroom_num"
                android:layout_alignParentLeft="true"
                android:textSize="30dp"
                android:textColor="#dfa916"
                android:text="手机号" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tel"
                android:layout_toLeftOf="@+id/textView5"
                android:textSize="30dp"
                android:textColor="#ee8101"
                android:text="请使用手机微信扫描" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tel"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:textColor="#ee8101"
                android:text="▶" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_toLeftOf="@+id/textView5"
                android:textSize="30dp"
                android:textColor="#ee8101"
                android:text="右侧二维码进行入住" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/img_loading1"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:src="@drawable/qrloading" />

            <ImageView
                android:id="@+id/img_qrcode"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:contentDescription="二维码"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="90dp"
                android:layout_centerInParent="true"
                android:layout_height="90dp"
                android:src="@drawable/logo" />
        </RelativeLayout>




    </LinearLayout>
</LinearLayout>
